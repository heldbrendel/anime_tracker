		"svelte": "^4.2.19",
		"svelte-check": "^4.0.4",
		"tailwind-merge": "^2.5.3",
		"tailwindcss": "^3.4.13",
		"tslib": "^2.7.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.8",
		"vitest": "^2.1.2"
	},
	"type": "module",
	"packageManager": "yarn@4.5.0",
	"dependencies": {
		"axios": "^1.7.7",
		"node-cache": "^5.1.2"
	}
}
